<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/rem_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_access_time_black_48dp"/>

            <TextView
                android:id="@+id/rem_study"
                android:layout_toEndOf="@id/rem_img"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需新学"/>
            <TextView
                android:id="@+id/rem_ok"
                android:layout_toEndOf="@id/rem_img"
                android:layout_below="@id/rem_study"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已背诵"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#eeeeee">

            <TextView
                android:id="@+id/rem_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="10sp"
                android:text="last word"/>

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rem_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="word"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="#0088ff"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"/>

        <TextView
            android:id="@+id/rem_psE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发音"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#555555"
            android:layout_marginTop="5dp" />

        <View
            android:id="@+id/rem_line_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_marginTop="10dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/rem_sent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="句子"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="#555555"
            android:layout_marginTop="5dp"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#00ff00">

            <TextView
                android:id="@+id/rem_item_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:text="选项A"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#00ff00">

            <TextView
                android:id="@+id/rem_item_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:text="选项B"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#00ff00">

            <TextView
                android:id="@+id/rem_item_C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:text="选项C"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#00ff00">

            <TextView
                android:id="@+id/rem_item_D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:text="选项D"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/rem_btn_zhan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="斩"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/rem_btn_hint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="提示"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/rem_btn_music"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/ic_volume_up_black_48dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>